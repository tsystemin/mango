<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.co.tsystem.mango.ProductDetailActivity"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PimageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/PnumberPicker"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/PtextView"
        android:layout_toRightOf="@+id/PnumberPicker"
        android:layout_toEndOf="@+id/PnumberPicker"
        android:layout_above="@+id/PtextView2"
        android:layout_below="@+id/PimageView"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:id="@+id/Pbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#ff5fccff"
        android:maxWidth="150sp"
        android:minHeight="40sp"
        android:maxHeight="40sp"
        android:minWidth="150sp"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/PtextView2"
        android:layout_above="@+id/Pbutton"
        android:layout_toRightOf="@+id/Pbutton"
        android:layout_toEndOf="@+id/Pbutton"
        android:layout_marginBottom="25dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PnumberPicker"
        android:layout_alignBottom="@+id/PtextView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
