<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.co.tsystem.mango.ProductDetailActivity"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/PimageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/PtextView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200sp"
        android:text=""
        android:id="@+id/PtextView"
        android:textColor="#ff000000"
        android:layout_above="@+id/PtextView2" />

    <Button
        android:layout_width="190sp"
        android:layout_height="50sp"
        android:text="Add to cart"
        android:id="@+id/Pbutton"
        android:clickable="true"
        android:background="@drawable/home_page_button_style"
        android:maxWidth="150sp"
        android:minHeight="40sp"
        android:maxHeight="40sp"
        android:minWidth="150sp"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/PtextView2"
        android:layout_above="@+id/Pbutton"
        android:layout_toRightOf="@+id/Pbutton"
        android:layout_marginBottom="25dp"
        android:layout_alignRight="@+id/PtextView"
        android:layout_alignEnd="@+id/PtextView"
        android:autoText="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/decbutton"
        android:background="#ffffe15f"
        android:layout_above="@+id/Pbutton"
        android:layout_alignLeft="@+id/Pbutton"
        android:layout_alignStart="@+id/Pbutton"
        android:layout_below="@+id/PtextView"
        android:textSize="40sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40sp"
        android:layout_height="35sp"
        android:text="+"
        android:id="@+id/incbutton"
        android:layout_alignBottom="@+id/decbutton"
        android:layout_toLeftOf="@+id/PtextView2"
        android:layout_toStartOf="@+id/PtextView2"
        android:background="#ffffe15f"
        android:layout_below="@+id/PtextView"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/quantity"
        android:layout_toRightOf="@+id/decbutton"
        android:layout_toLeftOf="@+id/incbutton"
        android:layout_toStartOf="@+id/incbutton"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/decbutton"
        android:layout_below="@+id/PtextView" />
</RelativeLayout>
