<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.tsystem.gamechanger.ViewCartActivity"
    android:background="#ff2a3050">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22sp"
        android:id="@+id/linearLayout1" >

    </LinearLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView1"
        android:background="#ff2a2f55"
        android:divider="#ffffffff"
        android:dividerHeight="1sp"
        android:drawSelectorOnTop="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100sp" />

    <Button
        android:id="@+id/check_out"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="CheckOut"
        android:textColor="#ffffff"
        android:background="@drawable/home_page_button_style"
        android:clickable="true"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clear_cart"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:text="Clear Cart"
        android:textColor="#ffffff"
        android:background="@drawable/home_page_button_style"
        android:clickable="true"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
