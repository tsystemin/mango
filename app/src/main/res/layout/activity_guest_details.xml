<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:measureAllChildren="false"
    android:background="#ffffffff">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.tsystem.mango.CheckoutActivity"
    android:background="#ffffffff"
    android:clickable="false"
    android:minHeight="630sp">

    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOTAL 0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:text="Place Order"
        android:id="@+id/chkoutbutton"
        android:background="#ffff692c"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <Button
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:text="Clear Cart"
        android:id="@+id/button"
        android:background="#ffff692c"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/editText"
        android:hint=" Address"
        android:gravity="top"
        android:textColor="#000000"
        android:imeActionId="@+id/bill_addr_ime"
        android:textColorHint="#3673509b"
        android:layout_below="@+id/editText9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:id="@+id/editText7"
        android:hint="Name"
        android:gravity="top"
        android:textColor="#000000"
        android:imeActionId="@+id/bill_addr_ime"
        android:textColorHint="#3673509b"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:id="@+id/editText8"
        android:hint="Phone Number"
        android:gravity="top"
        android:textColor="#000000"
        android:imeActionId="@+id/bill_addr_ime"
        android:textColorHint="#3673509b"
        android:layout_below="@+id/editText7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:id="@+id/editText9"
        android:hint="Email address"
        android:gravity="top"
        android:textColor="#000000"
        android:imeActionId="@+id/bill_addr_ime"
        android:textColorHint="#3673509b"
        android:layout_below="@+id/editText8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:id="@+id/editText11"
        android:hint="Pincode"
        android:gravity="top"
        android:textColor="#000000"
        android:imeActionId="@+id/bill_addr_ime"
        android:textColorHint="#3673509b"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:text="Login"
        android:id="@+id/login_to_checkout"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FF000000"
        android:textColor="#FFFFFFFF" />

    <RadioGroup
        android:id="@+id/radioGroupGuest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:layout_below="@+id/editText11"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash on Delivery"
        android:id="@+id/radioButton"
        android:layout_below="@+id/editText11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:textColor="#ff000000" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card on Delivery"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"/>
    </RadioGroup>

</RelativeLayout>
</ScrollView>
