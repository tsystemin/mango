<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.co.tsystem.mango.CheckoutActivity"
    android:background="#ffffffff"
    android:clickable="false">

    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOTAL 0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/bill_addr"
        android:hint="Billing Address"
        android:gravity="top"
        android:textColor="#000000"
        android:imeActionId= "@+id/bill_addr_ime"
        android:textColorHint="#3673509b"
        android:layout_below="@+id/use_reg_addr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/deli_addr"
        android:hint="Delivery Address"
        android:textColor="#000000"
        android:gravity="top"
        android:layout_above="@+id/editText10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#3673509b" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:text="Delivery address Pincode"
        android:textColor="#3673509b"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/chkoutbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash on Delivery"
        android:id="@+id/codradiobutton"
        android:layout_below="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:textColor="#ff000000" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Online"
        android:id="@+id/onlineradiobutton"
        android:layout_below="@+id/editText10"
        android:layout_toRightOf="@+id/codradiobutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff000000" />
    </RadioGroup>

    <Button
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:text="Place Order"
        android:id="@+id/chkoutbutton"
        android:background="#ffff692c"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioGroup1"
        android:layout_alignEnd="@+id/radioGroup1"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <Button
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:text="Clear Cart"
        android:id="@+id/button"
        android:background="#ffff692c"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_alignBottom="@+id/chkoutbutton"
        android:layout_alignRight="@+id/onlineradiobutton"
        android:layout_alignEnd="@+id/onlineradiobutton"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Registered Address"
        android:id="@+id/use_reg_addr"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textColor="#ff000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same as billing address"
        android:id="@+id/del_same_as_bill"
        android:textColor="#ff000000"
        android:layout_below="@+id/bill_addr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp" />

</RelativeLayout>
